<!-- Jumbotron header -->
<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-lg-offset-1">
        <h1>PLEDGE</h1>
        <p>Put your money where your mouth is. What will you pledge to <%= @pledge_candidate.charity_id %>?</p>
      </div>
    </div>
  </div>
</div>

<!-- Breadcrumb Nav -->
<div class="container">
  <div class="row">
    <div class="col-lg-10 col-lg-offset-1">
      <ol class="breadcrumb">
        <li><a href="choose.html">Choose</a></li>
        <li class="active">Pledge</li>
        <li>Pay</li>
        <li>Challenge</li>
      </ol>
    </div>
  </div>
</div>

<% if @pledge_candidate.errors.any? %>
<div class="container">
  <ul>
    <% @pledge_candidate.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<!-- main section -->
<div class="container">
  <%= form_for @pledge_candidate, url: wizard_path, method: :put do |f| %>
  <%= f.hidden_field :charity_id %>
  <%= f.hidden_field :amount, value: 20 %>
  <%= f.hidden_field :tip_percentage, value: 5 %>
   
  <div class="row">
    <div class="col-lg-10 col-lg-offset-1 clearfix pledge-confirm">
      <h2>Your pledge amount is $20.</h2>
      <a href="#" class="pull-left" id="pledge-options">Adjust your pledge amount <%= fa_icon "angle-double-down fw" %></a>
      
       <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
               data-key="pk_test_6pRNASCoBOKtIshFeQd4XMUh"

               data-image=""
               data-name="Pay It Forward"
               data-description="description"
               data-amount="99999"

               data-currency="USD"
               data-panel-label="Authorize"
               data-zip-code="true"
               data-label="Authorize"
               data-allow-remember-me="true">
      </script>
      
    </div>
  </div>
  <div class="row">
    <div class="col-lg-10 col-lg-offset-1 panel pledge-adjust" id="pledge-adjust">
      <label for="newpledge">New Pledge Amount</label>
      <div class="input-group">
        <input type="text" class="form-control" id="newpledge"placeholder="Enter your new amount">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button">Submit</button>
        </span>
      </div>
      
      <div class="slider">
        <small>humble bundle-esque slider goes here</small>
      </div>
    </div>
  </div>
  <% end %>

</div>