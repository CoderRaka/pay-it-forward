<% content_for(:page_title, 'Pay It Forward') %>

<div class="container">
  
  <div class="page-header">
    <h1>Email Confirmation</h1>
  </div>
  
  <div class="row">
    <form accept-charset="UTF-8" action="<%= confirmation_path(resource_name) %>" method="get" class="form-horizontal" role="form">
      <input name="utf8" type="hidden" value="âœ“">

      <div class="form-group">
        <label for="confirmation_token" class="col-sm-2 control-label">Confirmation Token</label>
        <div class="col-sm-10">
          <input autofocus="autofocus" class="form-control" id="confirmation_token" name="confirmation_token" type="text" autocomplete="off">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default btn-block">Submit Token</button>
        </div>
      </div>

    </form>

    <hr />

    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, role: 'form', class: 'form-horizontal' }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <% if current_user %>
            <p class="form-control-static"><%= current_user.unconfirmed_email || current_user.email %></p>
          <% else %>
            <%= f.email_field :email, class: 'form-control' %>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit 'Resend Confirmation Instructions', class: 'btn btn-default btn-block' %>
        </div>
      </div>

    <% end %>
  </div>
  
</div>