<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Add Email</h1>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-6">
      <%= form_for(current_user, :as => 'user', :url => user_finish_sign_up_path, :html => { role: 'form'}) do |f| %>
        <!-- TODO: Error Messages -->

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, value: nil, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit 'Continue', class: 'btn btn-default btn-block' %>
        </div>

      <% end %>
    </div>
  </div>
  
</div>