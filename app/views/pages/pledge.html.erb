<% content_for(:page_title, nil) %>

<div class="vertical-center">
  <div class="container">
    <div class="page-header">
      <h1>Pledge</h1>
      <p>How much would you like to pledge?</p>
    </div>

      <div class="row">
        <div class="col-xs-9">
          <div class="col-xs-3">
            <%= link_to '$10', page_path('authorization'), class: "btn btn-primary btn-lg btn-block", type: "button" %>
          </div>
          <div class="col-xs-3">
            <%= link_to '$20', page_path('authorization'), class: "btn btn-primary btn-lg btn-block", type: "button" %>
          </div>
          <div class="col-xs-3">
            <%= link_to '$50', page_path('authorization'), class: "btn btn-primary btn-lg btn-block", type: "button" %>
          </div>
        <div class="col-xs-3">
            <%= link_to '$100', page_path('authorization'), class: "btn btn-primary btn-lg btn-block", type: "button" %>
          </div>
          <div class="col-xs-6">
            <%= link_to 'Other amount...', page_path('authorization'), class: "btn btn-primary btn-lg btn-block", type: "button" %>
          </div>
        </div>
        <div class="col-xs-1 col-xs-offset-2">
          <ul>
              <li><%= image_tag("nav-dot-smiley.png", :alt => "home") %></li>
              <li><%= image_tag("nav-dot-heart-eyes.png", :alt => "choose") %></li>
              <li class="selected"><%= image_tag("nav-dot-sunglasses.png", :alt => "pledge") %></li>
              <li><%= image_tag("nav-dot-smirk.png", :alt => "charge") %></li>
              <li><%= image_tag("nav-dot-tongue-out.png", :alt => "challenge") %></li>
              <li><%= image_tag("nav-dot-hands-up.png", :alt => "celebrate") %></li>
            </ul>
      </div>
        
      </div>